{
	"name": "babel-plugin-helpers",
	"version": "0.1.0",
	"description": "Utility functions to make babel plugin development easier",
	"main": "dist/cjs/index.js",
	"module": "dist/es/index.js",
	"scripts": {
		"test": "mocha -r ts-node/register --extension ts,tsx,txt tests/**.test.ts",
		"build": "rimraf dist/ && tsc && tsc -p tsconfig.esm.json",
		"prepublishOnly": "npm run build"
	},
	"keywords": [
		"plugin",
		"babel",
		"helpers"
	],
	"author": "Marvin Hagemeister <hello@marvinh.dev>",
	"license": "MIT",
	"files": [
		"dist/"
	],
	"devDependencies": {
		"@babel/core": "^7.13.8",
		"@types/babel__core": "^7.1.12",
		"@types/mocha": "^8.2.1",
		"@types/node": "^14.14.32",
		"lint-staged": "^10.5.4",
		"mocha": "^8.3.1",
		"prettier": "^2.2.1",
		"rimraf": "^3.0.2",
		"simple-git-hooks": "^2.0.3",
		"ts-node": "^9.1.1",
		"typescript": "^4.2.3"
	},
	"dependencies": {
		"@babel/plugin-syntax-jsx": "^7.12.13"
	},
	"peerDependencies": {
		"@babel/core": "7.x"
	},
	"lint-staged": {
		"**/*.{js,jsx,ts,tsx,yml}": [
			"prettier --write"
		]
	},
	"simple-git-hooks": {
		"pre-commit": "npx lint-staged"
	},
	"prettier": {
		"useTabs": true,
		"arrowParens": "avoid",
		"trailingComma": "all"
	}
}
